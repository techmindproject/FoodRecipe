<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_recipe_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout

            android:orientation="vertical"
            android:layout_width="200sp"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <FrameLayout
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/samosa"

                    android:layout_width="wrap_content"
                    android:layout_height="200sp">
                </ImageView>
                <ImageView
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/hearts"
                    />
            </FrameLayout>
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garam Samosa Chatni"
                android:textSize="18dp"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RatingBar
                    android:layout_marginLeft="5dp"
                    android:id="@+id/MyRating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="3.5"
                    android:stepSize="0.3" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16"
                    />

            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="#c0c0c0"/>

            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipe by Abhishek kumar"
                android:textSize="14dp"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView


                    android:src="@drawable/ic_action_contect"

                    android:layout_width="20sp"
                    android:layout_height="20sp"


                    android:layout_margin="5sp" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16"
                    android:layout_margin="5sp" />
                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:src="@drawable/ic_action_like"
                    android:layout_margin="5sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="397"
                    android:layout_margin="5sp" />
                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:src="@drawable/ic_action_ear"
                    android:layout_margin="5sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:layout_margin="5sp" />

            </LinearLayout>




        </LinearLayout>
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="200sp"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <FrameLayout
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/samosa"
                    android:layout_width="wrap_content"
                    android:layout_height="200sp">
                </ImageView>
                <ImageView
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/hearts"
                    />
            </FrameLayout>
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garam Samosa Chatni"
                android:textSize="18dp"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RatingBar
                    android:layout_marginLeft="5dp"
                    android:id="@+id/MyRaing"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="3.5"
                    android:stepSize="0.3" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16"
                    />

            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="#c0c0c0"/>
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipe by Abhishek kumar"
                android:textSize="14dp"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView


                    android:src="@drawable/ic_action_contect"

                    android:layout_width="20sp"
                    android:layout_height="20sp"


                    android:layout_margin="5sp" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16"
                    android:layout_margin="5sp" />
                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:src="@drawable/ic_action_like"
                    android:layout_margin="5sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="397"
                    android:layout_margin="5sp" />
                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:src="@drawable/ic_action_ear"
                    android:layout_margin="5sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:layout_margin="5sp" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>




        </LinearLayout>







